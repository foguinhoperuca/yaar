<%%= content_for :content_header do %>
  <h1>
	<%%= t 'crud.index.title', table_name: <%= class_name %>.model_name.human %>
  </h1>
  <ol class="breadcrumb">
	<li class="active">
	  <%%= link_to <%= index_helper %>_path do %>
		<i class="fa fa-home"></i> <span><%%= <%= class_name %>.model_name.human(:count => 2) %></span>
	  <%% end %>
	</li>
  </ol>
<%% end %>

<div class="box">
  <div class="box-header">
	<h3 class="box-title"><%%= <%= class_name %>.model_name.human(:count => 2) %></h3>
	<div class="box-tools pull-right">
	  <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
	</div>
  </div>
  <div class="box-body no-padding">
	<table class="table table-condensed">
	  <thead>
		<tr>
		  <% attributes.reject(&:password_digest?).each do |attribute| -%>
		  <th><%%= <%= class_name %>.human_attribute_name("<%= attribute.name %>") %></th>
		  <% end -%>
		  <th colspan="3"></th>
		</tr>
	  </thead>
	  <tbody>
	  <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
		<tr>
		  <% attributes.reject(&:password_digest?).each do |attribute| -%>
			<%- if attribute.reference? -%>
			  <td>
				<%%= link_to <%= attribute.name %>_path(<%= singular_table_name %>.<%= attribute.name %>) do %>
				  <span class="label label-info"><%%= <%= singular_table_name %>.<%= attribute.name %>&.id %></span>
				<%% end %>
			  </td>
			<%- elsif attribute.type.eql?(:boolean) -%>
			  <td>
				<span class="label label-<%%= <%= singular_table_name %>.<%= attribute.name %> ? 'success' : 'danger' %>">
				  <%%= <%= singular_table_name %>.<%= attribute.name %> ? t('general.bool_yes') : t('general.bool_no') %>
				</span>
			  </td>
			<%- else -%>
			  <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
			<%- end -%>
		  <% end -%>
		  <td><%%= link_to t('general.action.show'), <%= singular_table_name %>, :class => 'btn btn-xs btn-info' %></td>
		  <td><%%= link_to t('general.action.edit'), edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-xs btn-warning' %></td>
		  <td><%%= link_to t('general.action.destroy.label'), <%= singular_table_name %>, method: :delete, data: { confirm: t('general.action.destroy.message') }, :class => 'btn btn-xs btn-danger' %></td>
		</tr>
		<%% end %>
	  </tbody>
	</table>
  </div>
</div>
<%%= link_to "#{t('general.action.new')}", new_<%= singular_table_name %>_path, :class => 'btn btn-xs btn-success' %>
