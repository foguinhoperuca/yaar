<header class="main-header">
  <!-- Logo -->
  <a href="/" class="logo">
	<!-- mini logo for sidebar mini 50x50 pixels -->
	<span class="logo-mini"><b>PMS</b></span>
	<!-- logo for regular state and mobile devices -->
	<span class="logo-lg"><b>IMPRESSORAS</b></span>
  </a>

  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
	<!-- Sidebar toggle button-->
	<a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
	  <span class="sr-only">Toggle navigation</span>
	</a>
	<!-- Navbar Right Menu -->
	<div class="navbar-custom-menu">
	  <ul class="nav navbar-nav">
		<!-- User Account: style can be found in dropdown.less -->
		<li class="dropdown user user-menu">
		  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
			<img src="/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
			<% if user_signed_in? %>
			<span class="hidden-xs"><%= current_user.email %></span>
			<% else %>
			<span class="hidden-xs">Usu&aacute;rio n&atilde;o logado</span>
			<% end %>
		  </a>
		  <ul class="dropdown-menu">
			<!-- User image -->
			<li class="user-header">
			  <img src="/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
			  <p>
				<% if user_signed_in? %>
				<%= current_user.email %>
				<% if current_user.admin? %>
				<small>Administrator</small>
				<% else %>
				<small>Normal</small>
				<% end %>
				<% else %>
				<%= link_to 'Login', user_registration_path, :class => 'btn btn-info btn-flat' %>
				<small>Go login!</small>
				<% end %>
			  </p>
			</li>
			<!-- Menu Body -->
			<li class="user-body">
			  <div class="row">
				<div class="col-xs-4 text-center">
				  <a href="#" class="btn btn-flat btn-default btn-xs">Parecer</a>
				</div>
				<div class="col-xs-4 text-center">
				  <a href="#" class="btn btn-flat btn-default btn-xs">Fiscaliza&ccedil;&atilde;o</a>
				</div>
				<div class="col-xs-4 text-center">
				  <a href="#" class="btn btn-flat btn-default btn-xs">Penalidades</a>
				</div>
			  </div>
			  <!-- /.row -->
			</li>
			<!-- Menu Footer-->
			<li class="user-footer">
			  <div class="pull-left">
				<%= link_to 'Profile', edit_user_registration_path, :class => 'btn btn-info btn-flat' %>
			  </div>
			  <div class="pull-right">
				<%= link_to("Logout", destroy_user_session_path, :method => :delete, :class => 'btn btn-warning btn-flat') %>
			  </div>
			</li>
		  </ul>
		</li>
	  </ul>
	</div>
  </nav>
</header>
